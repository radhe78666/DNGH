// Auth state observer
onAuthStateChanged(auth, async (user) => {
    if (user) {
        currentUser = user;
        await loadUserData();
        updateUI();
    } else {
        window.location.href = 'index.html';
    }
});

// Load user data from Firestore
async function loadUserData() {
    try {
        const userRef = doc(db, "users", currentUser.uid);
        const userSnap = await getDoc(userRef);

        if (userSnap.exists()) {
            userData = userSnap.data();

            // ‡§™‡•ç‡§≤‡§æ‡§® expiry ‡§ö‡•á‡§ï ‡§ï‡§∞‡•ã
            const now = new Date();
            if (userData.planExpiry && new Date(userData.planExpiry.seconds * 1000) < now) {
                userData.currentPlan = "free";
                userData.planExpiry = null;

                await setDoc(userRef, {
                    currentPlan: "free",
                    planExpiry: null,
                    updatedAt: serverTimestamp()
                }, { merge: true });
            }

            // ‡§Ö‡§ó‡§∞ ‡§®‡§Ø‡§æ ‡§¶‡§ø‡§® ‡§π‡•à ‡§§‡•ã searches reset ‡§ï‡§∞‡•ã
            const today = new Date().toDateString();
            if (userData.lastSearchDate !== today) {
                userData.searchesUsed = 0;
                userData.lastSearchDate = today;
                await setDoc(userRef, {
                    searchesUsed: 0,
                    lastSearchDate: today,
                    updatedAt: serverTimestamp()
                }, { merge: true });
            }
        } else {
            // Create default user data if doesn't exist
            userData = {
                currentPlan: "free",
                searchesUsed: 0,
                lastSearchDate: new Date().toDateString(),
                createdAt: new Date(),
                updatedAt: new Date()
            };
            
            await setDoc(userRef, {
                ...userData,
                createdAt: serverTimestamp(),
                updatedAt: serverTimestamp()
            });
        }
    } catch (error) {
        console.error("Error loading user data:", error);
        showToast('Error loading user data', 'error');
    }
}

// Update UI with user data
function updateUI() {
    if (!currentUser || !userData) return;

    const displayName = currentUser.displayName || 'User';
    const email = currentUser.email || 'Not Available';
    const photo = currentUser.photoURL;

    // üë§ Header (left side greeting)
    userName.textContent = displayName;

    // üë§ Top-right profile initials or photo
    if (photo) {
        profileImage.src = photo;
        profileImage.style.display = 'block';
        profileInitial.style.display = 'none';
    } else {
        profileInitial.textContent = displayName.charAt(0).toUpperCase();
        profileInitial.style.display = 'block';
        profileImage.style.display = 'none';
    }

    // ‚úÖ üß† üî• FIX: Dropdown Profile Info (YOU MISSED THIS!)
    const dropdownName = document.getElementById('dropdownName');
    const dropdownEmail = document.getElementById('dropdownEmail');
    const dropdownProfileImage = document.getElementById('dropdownProfileImage');

    if (dropdownName) dropdownName.textContent = displayName;
    if (dropdownEmail) dropdownEmail.textContent = email;
    if (dropdownProfileImage && photo) dropdownProfileImage.src = photo;

    // üîÅ Plan Info
    const plan = userData.currentPlan || 'free';
    planBadge.textContent = plan.charAt(0).toUpperCase() + plan.slice(1);

    if (plan === 'free') {
        const maxSearches = 3;
        const used = userData.searchesUsed || 0;
        const remaining = Math.max(0, maxSearches - used);
        searchesLeft.textContent = `${remaining}/${maxSearches} searches`;
        upgradeBtn.style.display = 'flex';
        searchesLeft.style.color = remaining === 0 ? '#e74c3c' : '#2ecc71';
    } else {
        searchesLeft.textContent = 'Unlimited searches';
        upgradeBtn.style.display = 'none';
    }
}


// Check if user can perform search
function canPerformSearch() {
    if (!userData) return false;
    
    const plan = userData.currentPlan || 'free';
    if (plan === 'monthly') return true;
    
    const maxSearches = 3;
    const used = userData.searchesUsed || 0;
    return used < maxSearches;
}

// Update search count
async function updateSearchCount() {
    if (!currentUser || !userData) return;
    
    const plan = userData.currentPlan || 'free';
    if (plan === 'monthly') return;
    
    const newCount = (userData.searchesUsed || 0) + 1;
    userData.searchesUsed = newCount;
    
    const userRef = doc(db, "users", currentUser.uid);
    await setDoc(userRef, {
        searchesUsed: newCount,
        lastSearchDate: new Date().toDateString(),
        updatedAt: serverTimestamp()
    }, { merge: true });
    
    updateUI();
}

// Search interests function
async function searchInterests() {
    if (isLoading) return;
    
    const query = searchInput.value.trim();
    if (!query) {
        showToast('Please enter a search term', 'error');
        return;
    }

    const plan = (userData.currentPlan || 'free').toLowerCase();
    if (plan === 'free' && !canPerformSearch()) {
        window.location.href = 'limitexist.html';
        return;
    }

// Clear previous selections and uncheck master toggle
masterCheckbox.checked = false;
selectedInterests = [];
updateSelectedList();


    isLoading = true;
    exploreBtn.disabled = true;
    exploreBtn.innerHTML = '<div class="spinner"></div> Searching...';
    
    try {
        let allData = [];
        let nextUrl = `https://graph.facebook.com/v19.0/search?type=adinterest&q=${encodeURIComponent(query)}&limit=500&access_token=${ACCESS_TOKEN}`;
        
        // Fetch multiple pages to get more results
        while (nextUrl && allData.length < 1000) {
            const response = await fetch(nextUrl);
            const data = await response.json();
            
            if (data.error) {
                throw new Error(data.error.message);
            }

            allData = [...allData, ...(data.data || [])];
            nextUrl = data.paging && data.paging.next ? data.paging.next : null;
        }

        allInterests = allData;
        await updateSearchCount();
        displayResults();
        
    } catch (error) {
        console.error('Search error:', error);
        showToast('Search failed. Please try again.', 'error');
    } finally {
        isLoading = false;
        exploreBtn.disabled = false;
        exploreBtn.innerHTML = 'Search';
    }
}

// Add this function before the displayResults function
function formatAudienceSize(lowerBound, upperBound) {
    function formatNumber(num) {
        if (num >= 1000000) {
            return (num / 1000000).toFixed(0) + 'M';
        } else if (num >= 1000) {
            return (num / 1000).toFixed(0) + 'K';
        }
        return num.toString();
    }
    
    const lower = formatNumber(lowerBound || 0);
    const upper = formatNumber(upperBound || 0);
    
    return `${lower} - ${upper}`;
}

// Replace the displayResults function with this updated version
function displayResults() {
    resultsCount.textContent = `Search Results: ${allInterests.length}`;
    
    if (allInterests.length === 0) {
        resultsBody.innerHTML = '<div class="empty-state"><h3>No results found</h3><p>Try different keywords</p></div>';
        return;
    }

    resultsBody.innerHTML = allInterests.map((interest, index) => `
    <div class="table-row" data-index="${index}" onclick="toggleInterestRow(${index})" style="cursor: pointer;">
        <div>
            <input type="checkbox" class="checkbox" onclick="event.stopPropagation();" onchange="toggleInterestFromCheckbox(${index}, this.checked)">
        </div>
        <div>${index + 1}</div>
     <div class="interest-name">${escapeHtml(interest.name.replace(/\s*\(.*?\)\s*/g, '').trim())}</div>
     
        <div>${formatAudienceSize(interest.audience_size_lower_bound, interest.audience_size_upper_bound)}</div>
        <div>${interest.topic || 'N/A'}</div>
    </div>
`).join('');
}

// Utility function to escape HTML
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// Toggle interest when row is clicked
function toggleInterestRow(index) {
    try {
        if (index < 0 || index >= allInterests.length) {
            console.error('Invalid index:', index);
            return;
        }

        const interest = allInterests[index];
        const row = document.querySelector(`[data-index="${index}"]`);
        if (!row) {
            console.error('Row not found for index:', index);
            return;
        }

        const checkbox = row.querySelector('.checkbox');
        if (!checkbox) {
            console.error('Checkbox not found for index:', index);
            return;
        }
        
        // Toggle checkbox state
        checkbox.checked = !checkbox.checked;
        
        // Update selection
        toggleInterestFromCheckbox(index, checkbox.checked);
        
    } catch (error) {
        console.error('Toggle interest row error:', error);
        showToast('Error selecting interest', 'error');
    }
}

// Toggle interest from checkbox
function toggleInterestFromCheckbox(index, isChecked) {
    try {
        if (index < 0 || index >= allInterests.length) {
            console.error('Invalid index:', index);
            return;
        }

        const interest = allInterests[index];
        
        if (isChecked) {
            const alreadyExists = selectedInterests.some(item => item.id === interest.id);
            if (!alreadyExists) {
                selectedInterests.push(interest);
            }
        } else {
            selectedInterests = selectedInterests.filter(item => item.id !== interest.id);
        }

        updateSelectedList();
        showToast(`${interest.name} ${isChecked ? 'selected' : 'removed'}`);
    } catch (error) {
        console.error('Toggle interest from checkbox error:', error);
        showToast('Error selecting interest', 'error');
    }
}

// Select all interests
function selectAll() {
    if (!allInterests || allInterests.length === 0) {
        showToast('No interests found to select', 'error');
        return;
    }

    const checkboxes = document.querySelectorAll('.checkbox');
    checkboxes.forEach(checkbox => {
        checkbox.checked = true;
    });

    selectedInterests = allInterests.map(i => ({ ...i }));
    updateSelectedList();
    showToast(`All ${allInterests.length} interests selected`);
}

// Update selected list
function updateSelectedList() {
    selectedCount.textContent = selectedInterests.length;

    // ‚úÖ Auto-toggle both checkboxes (master + toggle button)
    if (allInterests && allInterests.length > 0) {
        const allSelected = selectedInterests.length === allInterests.length;

        // Toggle top-right Select All button state
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        const selectAllToggle = document.getElementById('selectAllToggle');
        if (selectAllCheckbox) selectAllCheckbox.checked = allSelected;
        if (selectAllToggle) {
            if (allSelected) {
                selectAllToggle.classList.add('active');
            } else {
                selectAllToggle.classList.remove('active');
            }
        }

        // ‚úÖ Master checkbox sync (SL ‡§µ‡§æ‡§≤‡•Ä)
        const masterCheckbox = document.getElementById('masterCheckbox');
        if (masterCheckbox) masterCheckbox.checked = allSelected;
    }

    // ‚úÖ Selected List rendering
    if (selectedInterests.length === 0) {
        selectedList.innerHTML = `
            <div class="empty-state">
                <h4>No interests selected</h4>
                <p>Select interests from the left to see them here</p>
            </div>
        `;
        return;
    }

    selectedList.innerHTML = selectedInterests.map(interest => `
        <div class="selected-item">
          <span>${escapeHtml(interest.name.replace(/\s*\(.*?\)\s*/g, '').trim())}</span>

            <button class="remove-btn" onclick="removeInterest('${interest.id}')">√ó</button>
        </div>
    `).join('');
}

// Remove interest
function removeInterest(interestId) {
    try {
        const interest = selectedInterests.find(item => item.id === interestId);
        selectedInterests = selectedInterests.filter(item => item.id !== interestId);

        // Left side ‡§ï‡•á checkbox ‡§ï‡•ã uncheck ‡§ï‡§∞‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è
        const interestIndex = allInterests.findIndex(item => item.id === interestId);
        if (interestIndex !== -1) {
            const row = document.querySelector(`[data-index="${interestIndex}"]`);
            if (row) {
                const checkbox = row.querySelector('.checkbox');
                if (checkbox) {
                    checkbox.checked = false;
                }
            }
        }

        updateSelectedList();
        showToast(`${interest?.name || 'Interest'} removed`);
    } catch (error) {
        console.error('Remove interest error:', error);
        showToast('Error removing interest', 'error');
    }
}

// Clear selection
function clearSelection() {
    const checkboxes = document.querySelectorAll('.checkbox');
    checkboxes.forEach(cb => cb.checked = false);
    selectedInterests = [];
    updateSelectedList();
    showToast('All selections cleared');
}

// Clear selected interests
function clearSelected() {
    selectedInterests = [];
    document.querySelectorAll('.checkbox').forEach(cb => cb.checked = false);
    updateSelectedList();
    showToast('Selected interests cleared');
}

// Copy selected interests
function copySelected() {
    if (selectedInterests.length === 0) {
        showToast('No interests to copy', 'error');
        return;
    }

   const text = selectedInterests.map(i => i.name.replace(/\s*\(.*?\)\s*/g, '').trim()).join(', ');

    navigator.clipboard.writeText(text).then(() => {
        showToast(`${selectedInterests.length} interests copied`);
    }).catch(() => {
        showToast('Copy failed', 'error');
    });
}

// Download selected interests
function downloadSelected() {
    if (selectedInterests.length === 0) {
        showToast('No interests selected to download', 'error');
        return;
    }

    const keyword = searchInput.value.trim() || 'interests';
 const content = `Total: ${selectedInterests.length} interests\n\n${selectedInterests.map((interest, index) => `${index + 1}. ${interest.name.replace(/\s*\(.*?\)\s*/g, '').trim()}`).join('\n')}\n\nCopy-ready:\n${selectedInterests.map(i => i.name.replace(/\s*\(.*?\)\s*/g, '').trim()).join(', ')}`;


    const blob = new Blob([content], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `${keyword}_interests.txt`;
    a.click();
    URL.revokeObjectURL(url);

    showToast('Downloaded successfully');
}

// Show toast notification
function showToast(message, type = 'success') {
    toast.textContent = message;
    toast.className = `toast ${type === 'error' ? 'error' : 'success'}`;
    toast.classList.add('show');

    setTimeout(() => {
        toast.classList.remove('show');
    }, 3000);
}

// Event listeners
exploreBtn.addEventListener('click', searchInterests);
searchInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') searchInterests();
});
selectAllBtn.addEventListener('click', selectAll);
clearBtn.addEventListener('click', clearSelection);
copyBtn.addEventListener('click', copySelected);
downloadBtn.addEventListener('click', downloadSelected);
clearSelectedBtn.addEventListener('click', clearSelected);
upgradeBtn.addEventListener('click', () => window.location.href = 'plans.html');


// Profile click handler
// ‚úÖ Profile button click ‡§∏‡•á dropdown toggle
profileBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    dropdown.classList.toggle('show');
});

// ‚úÖ ‡§¨‡§æ‡§π‡§∞ click ‡§ï‡§∞‡§®‡•á ‡§™‡§∞ dropdown hide ‡§π‡•ã
document.addEventListener('click', (e) => {
    if (!dropdown.contains(e.target) && !profileBtn.contains(e.target)) {
        dropdown.classList.remove('show');
    }
});


// Make functions globally accessible
window.toggleInterestRow = toggleInterestRow;
window.toggleInterestFromCheckbox = toggleInterestFromCheckbox;
window.removeInterest = removeInterest;
window.clearSelection = clearSelection;
window.clearSelected = clearSelected;
window.copySelected = copySelected;
window.downloadSelected = downloadSelected;
window.selectAll = selectAll;

// Logout function
window.logout = async function() {
    try {
        await signOut(auth);
        window.location.href = 'index.html';
    } catch (error) {
        console.error('Logout error:', error);
        showToast('Logout failed', 'error');
    }
};

// Initialize on page load
document.addEventListener('DOMContentLoaded', () => {
    // Auto-focus search input
    searchInput.focus();
    
    // Initialize empty selected list
    updateSelectedList();
const darkStyle = document.getElementById("darkStyle");
const lightStyle = document.getElementById("lightStyle");
const themeBtn = document.getElementById("themeToggleBtn");
const themeIcon = document.getElementById("themeIcon");

// Theme Setup
const savedTheme = localStorage.getItem("theme");

// If user has previously selected a theme
if (savedTheme) {
    if (savedTheme === "light") {
        darkStyle.disabled = true;
        lightStyle.disabled = false;
        themeIcon.src = "moon.svg";
    } else {
        darkStyle.disabled = false;
        lightStyle.disabled = true;
        themeIcon.src = "sun.svg";
    }
} else {
    // Default to dark theme on first visit
    darkStyle.disabled = false;
    lightStyle.disabled = true;
    themeIcon.src = "sun.svg";
    localStorage.setItem("theme", "dark");
}


themeBtn.addEventListener("click", () => {
    const isCurrentlyDark = !darkStyle.disabled;

    // Toggle theme styles
    darkStyle.disabled = isCurrentlyDark;
    lightStyle.disabled = !isCurrentlyDark;

    // Update icon - IMPORTANT: always force set src
    if (isCurrentlyDark) {
        themeIcon.src = "moon.svg"; // Going to light, show moon icon
        localStorage.setItem("theme", "light");
    } else {
        themeIcon.src = "sun.svg"; // Going to dark, show sun icon
        localStorage.setItem("theme", "dark");
    }
});


});
</script>






</body>
</html>
